                <form action="/helper" method="POST" class="register-form" id="login-form">
                  <div class="form-group">
                    <label for="your_name"></label>
                    <input type="text" name="your_name" id="your_name" placeholder="Donor's Name" required />
                  </div>
                  <div class="form-group">
                    <label for="email"></label>
                    <input type="email" name="email" id="email" placeholder="Donor's Email" required />
                  </div>
                  <div class="form-group">
                                  <label for="phone"></label>
                                  <input type="tel" id="phone" name="phone" placeholder="Donor's Phone Number without 0" pattern="[1-9]{1}[0-9]{9}">
                                  </div>
                  <div class="row" style="margin-bottom: 2px">
           
                   
                    <div class="form-group col-lg-5">
                      <label for="city">
                        <!--<img src="../public/register/city.svg" alt="city">-->
                      </label>
                      <input type="text" name="city" id="city" placeholder="Donor's City" required />
                    </div>
      
                    <div class="form-group col-lg-7">
                      <label for="blood group"></label>
                      
                      <input type="text" name="b_group" id="b_group" placeholder="Blood Group" required />
                    </div>
